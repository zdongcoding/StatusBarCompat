<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    tools:context="com.github.statusbarcompat.demo.MainActivity"
    >

     <Button
         android:id="@+id/status_bar_color"
         android:layout_width="match_parent"
         android:text="setStatusBarColor"
         android:onClick="setStatusBarColor"
         android:layout_height="wrap_content" />
    <Button
        android:id="@+id/translucent_status_bar"
        android:layout_width="match_parent"
        android:text="translucentStatusBar"
        android:onClick="translucentStatusBar"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/status_bar_collapsingToolbar"
        android:layout_width="match_parent"
        android:text="setStatusBarColorForCollapsingToolbar"
        android:onClick="setStatusBarColorForCollapsingToolbar"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:text="@string/version_string"
        android:visibility="gone"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/img"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
